 public static void main(String[] args) {
        int [] arr={-1, 0, 1, 2, -1, 4};

        for(int i=0;i<arr.length;i++){
            int firstloop=arr[i];
            for(int j=i+1;j<arr.length;j++) {
                int secondloop=arr[j];
                for(int k=j+1;k<arr.length;k++){
                     int thirdloop=arr[k];

                     int sumNumber=firstloop+secondloop+thirdloop;
                     if(sumNumber==0){
                         System.out.println(firstloop+" "+secondloop+" "+thirdloop);
                     }
                }
                System.out.println();
            }
        }
    }
}
